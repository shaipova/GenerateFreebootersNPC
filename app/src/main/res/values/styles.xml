<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="freebooters_title">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/amarante</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">55dp</item>
    </style>

    <style name="freebooters_button_start">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/amarante</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="other_text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="freebooters_button">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/archivo_narrow_bold</item>
    </style>

</resources>